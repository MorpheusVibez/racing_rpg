<%= form_for(@user) do |f| %>
      <% if @user.errors.any? %>
            <h2>Errors</h2>
            <ul>
                  <% @user.errors.full_messages.each do |message| %>
                  <li><%= message %> </li>
                  <% end %>
            </ul>
            <% end %>
      <%= f.label :name %>
      <%= f.text_field :name %>
      <br>
      <br>
      <%= f.label :username %>
      <%= f.text_field :username %>
      <br>
      <br>
      <%= f.label :password %>
      <%= f.password_field :password %>
      <br>
      <br>
      <%= f.label :password_confirmation, "Confirm Password" %>
      <%= f.password_field :password_confirmation %>
      <br>
      <br>
      <%= f.submit "Confirm" %>
<% end %>